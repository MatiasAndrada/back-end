{{>head}}

{{#if listExist}}
<ul class="list-group">
  {{#each listProducts}}
  <li class="list-group-item list-group__item">
    <img class="list-group__item__img" src={{this.thumbnail}} alt="product" />
    <h3 class="list-group__item__title">{{this.name}}</h3>
    <p class="list-group__item__price">${{this.price}}</p>
  </li>
  {{/each}}

</ul>
{{/if}}